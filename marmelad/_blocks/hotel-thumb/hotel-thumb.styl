.hotel-thumb
  &__body
    width: 100%
    display: flex
    flex-direction: column

  &__img
    height: 190px
    text-decoration: none
    border-radius: 8px
    overflow: hidden

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover
      transition: transform 1.5s

    &:hover
      img
        transform: scale(1.3)

  &__content
    display: flex
    flex-direction: column
    padding: 8px

  &__name
    font-size: 20px
    color: #2E3035
    font-weight: 500
    line-height: 1.1
    text-decoration: none
    margin-bottom: 8px
    transition: color 0.3s

    &:hover
      color: #FF0B37

  &__total-rating
    list-style: none
    display: flex
    align-items: center
    padding-left: 0 !important
    margin: 0 0 8px 0 !important

  &__rating
    display: flex
    margin-right: 4px
    padding-left: 0 !important

    &:last-child
      margin-right: 0

  &__desc
    font-size: 14px
    color: #2E3035
    font-weight: 500
    line-height: 1.1
    margin-bottom: 8px

  &__price
    font-size: 20px
    color: #FF0B37
    font-weight: 500
    line-height: 1.1
    margin-top: 8px
