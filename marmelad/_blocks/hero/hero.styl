.hero
  color: #fff
  height: 100%

  &__section
    background-repeat: no-repeat
    background-position: 50% 0
    background-size: cover
    padding-top: 35px
    padding-bottom: 35px

  &__section, &__inner
    height: 100%

  &__container
    display: flex

  &__content
    width: 690px
    padding-top: 30px

  &__title
    font-size: 48px
    color: #FFF
    font-family: $fonts.headings
    font-weight: 400
    line-height: 1.2
    margin-top: 0
    margin-bottom: 60px

  &__slider
    flex: 0 0 570px
    width: 570px
    max-width: 570px
    height: 470px
    margin-left: 10px
    margin-right: -50px

    @media (max-width: 1360px)
      margin-right 0

    .swiper-button-prev, .swiper-button-next
      width: 40px
      height: 40px
      background-color: #EDF0F7
      border-radius: 50%
      transition: background-color 0.3s, ease 0.3s

      &:after
        content: ''
        width: 20px
        height: 14px
        background-image: url("data:image/svg+xml,%3Csvg width='20' height='14' viewBox='0 0 20 14' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M4.37462 8.00001L7.87711 11.5859C8.26301 11.981 8.25556 12.6141 7.86047 13C7.46538 13.3859 6.83226 13.3785 6.44636 12.9834L0.943387 7.34938C0.753638 7.15511 0.753638 6.84491 0.943387 6.65064L6.44636 1.01665C6.83226 0.621554 7.46538 0.614106 7.86047 1.00001C8.25556 1.38591 8.26301 2.01903 7.87711 2.41412L4.37462 6.00001H19C19.5523 6.00001 20 6.44772 20 7.00001C20 7.55229 19.5523 8.00001 19 8.00001H4.37462Z' fill='black'/%3E%3C/svg%3E%0A")
        background-repeat: no-repeat
        background-position: 0 0
        background-size: contain
        transition: background 0.3s, ease 0.3s

      &:hover
        background-color: #FF0B37

        &:after
          background-image: url("data:image/svg+xml,%3Csvg width='20' height='14' viewBox='0 0 20 14' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M4.37462 8.00001L7.87711 11.5859C8.26301 11.981 8.25556 12.6141 7.86047 13C7.46538 13.3859 6.83226 13.3785 6.44636 12.9834L0.943387 7.34938C0.753638 7.15511 0.753638 6.84491 0.943387 6.65064L6.44636 1.01665C6.83226 0.621554 7.46538 0.614106 7.86047 1.00001C8.25556 1.38591 8.26301 2.01903 7.87711 2.41412L4.37462 6.00001H19C19.5523 6.00001 20 6.44772 20 7.00001C20 7.55229 19.5523 8.00001 19 8.00001H4.37462Z' fill='%23fff'/%3E%3C/svg%3E%0A")

    .swiper-button-prev
      top: auto
      bottom: 90px
      left: 120px

    .swiper-button-next
      top: auto
      bottom: 90px
      right: 20px
      transform: rotate(180deg)

    .swiper-pagination
      display: flex
      align-items: center
      justify-content: center
      margin-left: 50px
      bottom: 40px

    .swiper-pagination-bullet
      width: 10px
      height: 10px
      background-color: #7A808E
      opacity: 1

      &.swiper-pagination-bullet-active
        background-color: #FF0B37

  &__item
    &.swiper-slide-active
      & ^[0]
        &__date
          strong
            opacity: 1
            transform: translateY(0)

          span
            opacity: 1
            transform: translateY(0)

        &__price
          span
            opacity: 1
            transform: scale(1)

        // &__img
        // opacity: 1
        &__text
          opacity: 1
          transform: translate(-50%, 0)

  &__body
    display: flex
    align-items: center

  &__info
    display: flex
    align-items: center
    position: relative
    z-index: 6

  &__date
    color: #fff
    flex: 0 0 143px
    width: 143px
    max-width: 143px
    height: 143px
    background-color: #FF0B37
    border-radius: 50%
    overflow: hidden
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    position: relative
    z-index: 1

    strong
      font-size: 66px
      font-family: $fonts.headings
      font-weight: 400
      line-height: 0.7
      opacity: 0
      transform: translateY(-100px)
      transition: opacity 0.3s, transform 0.8s, ease 0.5s

    span
      font-size: 26px
      font-family: $fonts.special
      font-weight: 400
      line-height: 1.1
      letter-spacing: 1.76px
      opacity: 0
      transition: opacity 0.3s, transform 0.8s, ease 0.5s
      transform: translateY(100px)

  &__price
    font-size: 20px
    font-weight: 700
    line-height: 1.1
    color: #000
    flex: 0 0 103px
    width: 103px
    max-width: 103px
    height: 103px
    background-color: #FFF
    position: relative
    border-radius: 50%
    overflow: hidden
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    z-index: 2
    margin-left: -25px

    span
      opacity: 0
      transform: scale(0.05)
      transition: opacity 0.3s, transform 0.8s, ease 0.5s

  &__in-circle
    flex: 0 0 470px
    width: 470px
    max-width: 470px
    height: 470px
    border-radius: 50%
    overflow: hidden

  &__img
    height: 75%
    position: relative
    z-index: 5

    img
      width: 100%
      height: 100%
      vertical-align: top
      object-fit: cover

    &:after
      content: ''
      position: absolute
      top: 280px
      left: 50%
      transform: translateX(-50%)
      width: 1090px
      height: 1090px
      border-radius: 50%
      background-color: #FFFFFF
      z-index: 1

  &__text
    font-size: 26px
    color: #2E3035
    font-family: $fonts.headings
    font-weight: 400
    line-height: 1.2
    text-align: center
    position: absolute
    z-index: 6
    width: 280px
    margin-left: 50px
    bottom: 80px
    left: 50%
    opacity: 0
    transform: translate(-50%, 50px)
    transition: opacity 0.3s, transform 1s, ease 0.3s