    position: relative

    &:before, &:after
      content: ''
      position: absolute
      left: 40px
      width: 2px
      // height: 100%
      background-color: #EDF0F7

      @media (max-width: 479px)
        left: auto
        right: 55px

    &:before
      top: 0

    &:after
      bottom: -30px
      height: 100%

    &--first
      &:before
        top: 0
        height: 46px

        @media (max-width: 479px)
          top: -16px
          height: 16px

    &--last
      &:before
        top: 0
        height: 40%

      &:after
        top: 40%
        bottom: auto
        width: 40px
        height: 2px

      & ^[0]
        &__date
          background-color: transparent

  &__body
    display: flex
    align-items: center
    width: 100%

  &__date
    font-size: 16px
    font-weight: 500
    line-height: 1
    text-align: center
    flex: 0 0 80px
    width: 80px
    max-width: 80px
    margin-right: 32px
    display: flex
    flex-direction: column
    justify-content: center
    position: relative
    background-color: #fff
    z-index: 2
    padding-top: 10px
    padding-bottom: 10px

    @media (max-width: 479px)
      font-size: 14px
      position: absolute
      top: 16px
      right: -16px
      border-radius: 10px
      z-index: 3

    strong
      color: #000
      margin-bottom: 4px

    span
      color: #7a808e

    &--weekend
      & ^[0]
        &__day
          color: #ff0b37

  &__day
    font-size: 14px
    color: #2E3035
    font-weight: 500
    line-height: 1
    height: 33px
    background-color: #F5F7FC
    padding: 8px 12px
    border-radius: 16px
    align-self: center
    margin-top: 10px

    @media (max-width: 479px)
      font-size: 12px
      padding: 4px 10px
      margin-top: 5px
      height: 22px
      border-radius: 10px

  &__card
