      font-size: 16px

  &__text
    font-size: 16px
    color: #2E3035
    font-weight: 500
    line-height: 1.1
    margin-bottom: 8px

    @media (max-width: 639px)
      font-size: 14px

  &__button-more-text
    font-size: 14px
    color: #2E3035
    font-weight: 500
    line-height: 1
    text-decoration: none
    display: flex
    align-items: center
    background-color: #FFF
    border-radius: 16px
    padding: 8px 12px
    min-width: 110px
    width: 110px

