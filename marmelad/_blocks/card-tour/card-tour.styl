    padding: 32px
    background-color: #EDF0F7
    border-radius: 8px
    width: 100%

    @media (max-width: 639px)
      padding: 16px

    @media (max-width: 479px)
      display: block
      position: relative
      z-index: 2

  &__img
    flex: 0 0 96px
    width: 96px
    max-width: 96px
    height: 96px
    border-radius: 50%
    position: relative
    overflow: hidden
    margin-right: 32px

    @media (max-width: 639px)
      flex: 0 0 78px
      width: 78px
      max-width: 78px
      height: 78px
      margin-right: 16px

    @media (max-width: 479px)
      margin-right: 0
      margin-bottom: 16px

    img
      vertical-align: top
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)

  &__name
    font-size: 20px
    color: #2E3035
    font-weight: 500
    line-height: 1.1
    margin-bottom: 8px

