  width: 100%

  &__section
    @media (max-width: 1279px)
      display: flex
      border-radius: 16px
      overflow: hidden

    @media (max-width: 959px)
      flex-wrap: wrap

  &__middle, &__bottom
    @media (max-width: 1279px)
      width: 33.333%

    @media (max-width: 959px)
      width: 50%

    @media (max-width: 767px)
      width: 100%

  &__top
    background-color: #F5F7FC
    border-radius: 16px 16px 0px 0px
    padding: 20px 24px 24px 24px

