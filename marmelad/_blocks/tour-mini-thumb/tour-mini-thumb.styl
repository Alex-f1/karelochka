.tour-mini-thumb
  text-decoration: none
  display: flex

  &:hover
    & ^[0]
      &__img
        img
          transform: scale(1.3)

      &__name
        color: #ff0b37

  &__body
    width: 100%
    display: flex
    flex-direction: column

  &__img
    width: 100%
    height: 118px
    border-radius: 8px
    overflow: hidden
    margin-bottom: 8px

    img
      width: 100%
      height: 100%
      vertical-align: top
      object-fit: cover
      transition: transform 1.5s

  &__name
    font-size: 14px
    color: #2E3035
    font-weight: 600
    line-height: 1.1
    transition: color 0.3s

  &__price
    display: flex
    align-items: center

    span
      font-size: 16px
      color: #FF0B37
      font-weight: 500
      line-height: 1

  &__date
    color: #fff
    flex: 0 0 40px
    width: 40px
    max-width: 40px
    height: 40px
    background-color: #FF0B37
    border-radius: 50%
    overflow: hidden
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    margin-left: auto

    strong
      font-size: 18px
      color: #fff
      font-family: $fonts.headings
      font-weight: 400
      line-height: 0.7

    span
      font-size: 10px
      color: #fff
      font-family: $fonts.special
      font-weight: 400
      line-height: 1.1
      letter-spacing: 1.76px