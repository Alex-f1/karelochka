.reviews-block
  overflow: hidden

  &__section
    min-height: 580px
    background-repeat: no-repeat
    background-position: 50% 60%
    background-size: cover
    padding-top: 65px
    padding-bottom: 65px

    @media (max-width: 767px)
      min-height: 380px
      padding-top: 30px
      padding-bottom: 30px

  &__head
    margin-bottom: 20px
    display: flex

    @media (max-width: 767px)
      margin-bottom: 0

  &__title
    font-size: 38px
    color: #fff
    font-family: $fonts.headings
    font-weight: 400
    line-height: 1.3
    margin-top: 0
    margin-bottom: 0

    @media (max-width: 767px)
      font-size: 30px

  &__wrapper
    padding: 0 30px
    position: relative
    border-radius: 16px

    @media (max-width: 1279px)
      padding-right: 0
      padding-left: 0

    @media (max-width: 1023px)
      margin-left: -30px
      margin-right: -30px

    .swiper-button-prev, .swiper-button-next
      width: 40px
      height: 40px
      background-color: #EDF0F7
      border-radius: 50%
      transition: background-color 0.3s, ease 0.3s

      @media (max-width: 1023px)
        display: none

      &:after
        content: ''
        width: 20px
        height: 14px
        background-image: url("data:image/svg+xml,%3Csvg width='20' height='14' viewBox='0 0 20 14' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M4.37462 8.00001L7.87711 11.5859C8.26301 11.981 8.25556 12.6141 7.86047 13C7.46538 13.3859 6.83226 13.3785 6.44636 12.9834L0.943387 7.34938C0.753638 7.15511 0.753638 6.84491 0.943387 6.65064L6.44636 1.01665C6.83226 0.621554 7.46538 0.614106 7.86047 1.00001C8.25556 1.38591 8.26301 2.01903 7.87711 2.41412L4.37462 6.00001H19C19.5523 6.00001 20 6.44772 20 7.00001C20 7.55229 19.5523 8.00001 19 8.00001H4.37462Z' fill='black'/%3E%3C/svg%3E%0A")
        background-repeat: no-repeat
        background-position: 0 0
        background-size: contain
        transition: background 0.3s, ease 0.3s

      &:hover
        background-color: #FF0B37

        &:after
          background-image: url("data:image/svg+xml,%3Csvg width='20' height='14' viewBox='0 0 20 14' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M4.37462 8.00001L7.87711 11.5859C8.26301 11.981 8.25556 12.6141 7.86047 13C7.46538 13.3859 6.83226 13.3785 6.44636 12.9834L0.943387 7.34938C0.753638 7.15511 0.753638 6.84491 0.943387 6.65064L6.44636 1.01665C6.83226 0.621554 7.46538 0.614106 7.86047 1.00001C8.25556 1.38591 8.26301 2.01903 7.87711 2.41412L4.37462 6.00001H19C19.5523 6.00001 20 6.44772 20 7.00001C20 7.55229 19.5523 8.00001 19 8.00001H4.37462Z' fill='%23fff'/%3E%3C/svg%3E%0A")

    .swiper-button-prev
      left: 30px

      @media (max-width: 1279px)
        left: -20px

    .swiper-button-next
      right: 30px
      transform: rotate(180deg)

      @media (max-width: 1279px)
        right: -20px

  &__slider
    max-width: 1060px
    padding: 30px 30px 50px 30px
    border-radius: 16px

    .swiper-pagination
      display: flex
      align-items: center
      justify-content: center
      bottom: 0

      @media (max-width: 767px)
        bottom: 10px

    .swiper-pagination-bullet
      width: 10px
      height: 10px
      background-color: #7A808E
      opacity: 1

      &.swiper-pagination-bullet-active
        background-color: #FF0B37

  &__item
    &.swiper-slide-active, &.swiper-slide-next, &.swiper-slide-duplicate-active, &.swiper-slide-duplicate-next
      & ^[0]
        &__body
          @media (min-width: 768px)
            box-shadow: 0px 16px 24px rgba(0, 0, 0, 0.32)

    &.swiper-slide-active
      & ^[0]
        &__body
          box-shadow: 0px 16px 24px rgba(0, 0, 0, 0.32)

  &__body
    background-color: #FFF
    border-radius: 16px
    padding: 32px
    transition: box-shadow 0.3s, ease 0.3s

    @media (max-width: 479px)
      padding: 15px

  &__name
    font-weight: 500
    display: flex
    align-items: center
    margin-bottom: 10px

    span
      font-size: 20px
      color: #2E3035
      line-height: 1.1

      @media (max-width: 767px)
        font-size: 16px
        margin-right: 20px

  &__date
    font-size: 14px
    color: #333
    line-height: 1.1
    margin-left: auto
    flex: 0 0 auto

  &__text
    min-height: 188px
    margin-bottom: 10px

    p
      font-size: 14px
      color: #333
      font-weight: 500
      line-height: 1.1
      margin-top: 0

      &:last-child
        margin-bottom: 0

  &__info
    display: flex
    align-items: center

  &__direction
    font-size: 14px
    color: #333
    font-weight: 500
    line-height: 1.1
    margin-top: 0

    span, a
      color: #fff
      text-decoration: none
      margin-left: 10px
      display: inline-block
      vertical-align: middle
      padding: 4px 8px
      background-color: #7A808E
      border-radius: 20px

      @media (max-width: 959px)
        display: block
        margin-top: 5px
        margin-left: 0

    a
      transition: background-color 0.3s

      &:hover
        background-color: #FF0B37

  &__total-rating
    list-style: none
    display: flex
    align-items: center
    padding-left: 10px
    margin: 0 0 0 auto

  &__rating
    display: flex
    margin-right: 4px

    &:last-child
      margin-right: 0