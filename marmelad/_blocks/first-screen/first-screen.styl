.first-screen
  &__section
    background-repeat: no-repeat
    background-position: 50% 0
    background-size: cover
    padding-top: 35px
    padding-bottom: 35px
    min-height: 160px

    @media (max-width: 959px)
      padding-top: 30px
      padding-bottom: 30px

  &__inner
    height: 100%

  &__content
    color: #fff

    h1
      font-size: 48px
      color: #FFF
      font-family: $fonts.headings
      font-weight: 400
      line-height: 1.3
      margin-top: 0
      margin-bottom: 0

      @media (max-width: 767px)
        font-size: 30px

  &__sorting-panel
    margin-top: 48px

    .sorting-tours
      margin-bottom: -15px

      &__items
        flex-wrap: wrap

      &__item
        color: #fff
        background-color: rgba(255, 255, 255, 0.1)
        margin-bottom: 15px
