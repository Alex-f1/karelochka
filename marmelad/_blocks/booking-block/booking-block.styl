.booking-block
  padding-top: 64px
  padding-bottom: 64px
  min-height: 685px

  @media (max-width: 1279px)
    padding-top: 32px
    padding-bottom: 32px

  .contacts-info
    padding-top: 0
    padding-bottom: 0

    &__wrapper
      @media (max-width: 1023px)
        flex-direction: column

    &__form
      padding: 0
      overflow: hidden

    &__fields
      padding: 32px

      @media (max-width: 1279px)
        padding: 16px

      @media (max-width: 1023px)
        width: 100%

      &:last-child
        background-color: #EDF0F7
        display: flex
        flex-direction: column

      p
        font-weight: 500
        font-size: 16px
        line-height: 19px
        color: #2E3035

    &__field
      padding-right: 8px

      > span
        width: 100%
        display: flex
        align-items: center
        margin-bottom: 4px

        a
          color: #0075FF
          text-decoration: none
          margin-left: auto

          &:hover
            text-decoration: underline

    &__name
      font-size: 24px
      color: #2E3035
      font-family: $fonts.headings
      font-weight: 400
      line-height: 1.1

    &__text
      padding-top: 40px
      padding-bottom: 40px

      @media (max-width: 1023px)
        padding-top: 0
        padding-bottom: 20px

      p
        font-size: 16px
        color: #2E3035
        font-weight: 500
        line-height: 1.2
        margin-top: 0
        margin-bottom: 20px

        &:last-child
          margin-bottom: 0

    &__button-sign-in
      min-width: 166px

      @media (max-width: 767px)
        width: 100%

    &__button-sign-up
      width: 100%
      margin-top: auto

    &__bottom
      padding: 26px 32px
      margin-top: 24px
      background-color: #F5F7FC
      border-radius: 16px
      background-image: url('../img/contacts-info-bg.svg')
      background-repeat: no-repeat
      background-position: 95% 10px

      @media (max-width: 1279px)
        background-position: 120% 10px
        padding: 16px

      @media (max-width: 1023px)
        background-image: none

      p
        font-size: 20px
        color: #2E3035
        font-weight: 500
        line-height: 1.1
        margin-top: 0
        margin-bottom: 8px

      span
        font-size: 16px
        color: #2E3035
        font-weight: 500
        line-height: 1.1
        display: block

        a
          color: #0075FF
          text-decoration: none

          &:hover
            text-decoration: underline

  &__head
    margin-bottom: 16px

  &__title
    font-size: 38px
    color: #333
    font-family: $fonts.headings
    font-weight: 400
    line-height: 1.2
    margin-top: 0
    margin-bottom: 0

    @media (max-width: 767px)
      font-size: 30px

  &__sidebar
    flex: 0 0 384px
    width: 384px
    max-width: 384px
    margin-left: auto

    @media (min-height: 840px) and (min-width: 1280px)
      top: 25px
      padding-bottom: 50px
      position: sticky
      align-self: flex-start

    @media (max-width: 767px)
      flex: none
      width: 100%
      max-width: 100%
      padding-top: 32px

  &__container
    display: flex

    @media (max-width: 767px)
      flex-direction: column

  &__content
    margin-right: 32px
    width: 100%

// --------------------------- sidebar-booking --------------------------------- //
.sidebar-booking
  width: 100%
  background-color: #F5F7FC
  border-radius: 16px
  padding: 24px

  @media (max-width: 1279px)
    padding: 16px

  &__title
    font-size: 32px
    color: #2E3035
    font-family: $fonts.headings
    font-weight: 400
    line-height: 1.2
    margin-top: 0
    margin-bottom: 16px

    @media (max-width: 767px)
      font-size: 30px

  &__item
    border-bottom: 1px solid rgba(122, 128, 142, 0.3)
    padding-top: 24px
    padding-bottom: 24px

    &:nth-child(2)
      padding-top: 0

    &:last-child
      border-bottom: none
      padding-bottom: 0

  &__text
    font-size: 14px
    font-weight: 500
    color: #2E3035
    line-height: 1.1
    margin-bottom: 15px
    text-overflow: ellipsis
    display: -webkit-box
    -webkit-line-clamp: 2
    -webkit-box-orient: vertical
    white-space: normal
    overflow: hidden
    height: 32px

    span
      width: 4px
      height: 4px
      position: relative
      margin-left: 5px
      margin-right: 5px
      display: inline-block
      vertical-align: middle
      background-color: #FF0B37
      border-radius: 50%

  &__dates
    font-weight: 500
    font-size: 14px
    line-height: 17px
    color: #2E3035
    display: flex
    align-items: center

    @media (max-width: 479px)
      flex: 0 0 auto
      flex-wrap: wrap

    span
      margin-right: 8px
      margin-left: 8px

  &__date
    margin-right: 4px

  &__day
    padding: 8px 12px
    background-color: #fff
    border-radius: 16px
    transition: background-color 0.3s, ease 0.3s

    &--weekend
      color: #FF0B37

  &__day-hours
    margin-left: auto

    @media (max-width: 479px)
      width: 100%

  &__price
    font-size: 20px
    color: #FF0B37
    font-weight: 500
    line-height: 1

  &__starting-price
    display: flex
    align-items: center

    span
      font-size: 20px
      color: #2E3035
      font-weight: 500
      line-height: 1

  &__explanation
    margin-left: 8px

