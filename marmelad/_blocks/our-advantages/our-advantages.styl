.our-advantages
  padding-top: 65px
  padding-bottom: 15px
  background-color: #F5F7FC

  @media (max-width: 1279px)
    padding-top 30px

  &__head
    margin-bottom: 50px
    display: flex

    @media (max-width: 767px)
      margin-bottom: 30px

  &__title
    font-size: 38px
    color: #2E3035
    font-family: $fonts.headings
    font-weight: 400
    line-height: 1.3
    margin-top: 0
    margin-bottom: 0

    @media (max-width: 767px)
      font-size: 30px

  &__items
    display: flex
    flex-wrap: wrap
    margin-left: -30px

  &__item
    width: 25%
    padding-left: 30px
    display: flex

    @media (max-width: 959px)
      width: 50%

    @media (max-width: 639px)
      width: 100%

  &__body
    display: flex
    flex-direction: column
    align-items: center
    padding: 0 30px 50px 30px

    @media (max-width: 1279px)
      padding: 15px

    @media (max-width: 639px)
      padding: 0 0 30px 0

  &__icon
    width: 180px
    margin-bottom: 10px

    @media (max-width: 959px)
      width: 120px

    svg
      max-width: 100%
      height: auto

  &__name
    font-size: 20px
    color: #FF0B37
    font-weight: 500
    line-height: 1.1
    text-align: center
    margin-bottom: 10px

  &__text
    font-weight: 500
    color: #2e3035
    font-size: 14px
    line-height: 1.1
    text-align: center
