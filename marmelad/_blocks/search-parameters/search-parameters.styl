.search-parameters
  padding-top: 65px
  padding-bottom: 65px

  @media (max-width: 767px)
    padding-top: 30px
    padding-bottom: 30px

  &__head
    margin-bottom: 50px
    display: flex

    @media (max-width: 767px)
      margin-bottom: 30px

  &__title
    font-size: 38px
    color: #2E3035
    font-family: $fonts.headings
    font-weight: 400
    line-height: 1.3
    margin-top: 0
    margin-bottom: 0

    @media (max-width: 767px)
      font-size: 30px

  &__items
    max-width: 1310px
    padding-right: 20px

  &__item
    width: 100%
    display: flex
    align-items: center
    margin-bottom: 30px

    @media (max-width: 767px)
      align-items: flex-start
      flex-direction: column

    &:last-child
      margin-bottom: 0

  &__name
    font-size: 20px
    color: #2E3035
    font-weight: 500
    line-height: 1.1
    margin-right: 8px
    flex: 0 0 auto

    @media (max-width: 1023px)
      font-size: 16px

    @media (max-width: 767px)
      margin-bottom: 10px

  &__parameters
    width: 100%
    list-style: none
    display: flex
    align-items: center
    padding-left: 0
    margin: 0

    @media (max-width: 479px)
      flex-wrap: wrap

  &__parameter
    flex: 0 0 auto
    margin-right: 8px

    @media (max-width: 639px)
      margin-bottom: 8px

    &:last-child
      margin-right: 0

    a
      font-size: 16px
      color: #7A808E
      font-weight: 500
      line-height: 1
      text-align: center
      text-decoration: none
      background-color: #EDF0F7
      padding: 10px 16px
      border-radius: 20px
      transition: color 0.3s
      display: block

      @media (max-width: 639px)
        font-size: 14px
        padding: 8px 10px

      &:hover
        color: #0075FF

  &__parameter-last
    flex: 0 0 100px
    position: relative
    cursor: pointer
    display: flex
    align-items: center
    padding: 10px 16px
    border-radius: 20px
    background-color: #EDF0F7

    @media (max-width: 639px)
      flex: 0 0 80px
      padding: 8px 10px

    &._is-active
      &:before
        color: #0075FF

      &:after
        transform: rotate(180deg)

      ul
        opacity: 1
        visibility: visible

    &:hover
      &:before
        color: #0075FF

    &:before
      content: 'Еще ...'
      font-size: 16px
      color: #7A808E
      font-weight: 500
      line-height: 1
      width: 100%
      transition: color 0.3s

      @media (max-width: 639px)
        font-size: 14px

    &:after
      content: ''
      width: 10px
      height: 7px
      background-image: url("data:image/svg+xml,%3Csvg width='10' height='7' viewBox='0 0 10 7' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M5.00002 3.63372L2.31804 0.951736C1.92751 0.561212 1.29435 0.561211 0.903823 0.951736C0.513299 1.34226 0.513299 1.97542 0.903823 2.36595L4.64647 6.10859C4.84173 6.30385 5.15831 6.30385 5.35357 6.10859L9.09622 2.36595C9.48674 1.97543 9.48674 1.34226 9.09622 0.951736C8.70569 0.561211 8.07253 0.561211 7.682 0.951736L5.00002 3.63372Z' fill='%237A808E'/%3E%3C/svg%3E%0A")
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain
      padding-top: 2px
      transition: transform 0.3s

    &:first-child
      ul
        left: 0
        right: auto

    ul
      list-style: none
      position: absolute
      top: 100%
      right: 0
      width: 280px
      min-width: 228px
      padding-top: 14px
      display: flex
      justify-content: flex-end
      flex-wrap: wrap
      margin: 10px 0 0 0
      background-color: #fff
      padding: 8px 0px 0 8px
      border-radius: 15px
      box-shadow: 0px 16px 24px rgba(0, 0, 0, 0.32)
      z-index: 2
      opacity: 0
      visibility: hidden
      transition: opacity 0.3s, ease 0.3s

      li
        margin-bottom: 8px

        &:last-child
          margin-right: 8px

        a
          display: inline-block