.articles-content
  padding-top: 65px
  padding-bottom: 65px

  @media (max-width: 1279px)
    padding-top: 30px
    padding-bottom: 30px

  &__head
    margin-bottom: 50px
    display: flex

    @media (max-width: 767px)
      margin-bottom: 30px

  &__title
    font-size: 38px
    color: #2E3035
    font-family: $fonts.headings
    font-weight: 400
    line-height: 1.3
    margin-top: 0
    margin-bottom: 0

    @media (max-width: 767px)
      font-size: 30px

  &__info
    font-weight: 500
    color: #7A808E
    font-size: 14px
    line-height: 1.1
    display: flex
    align-items: center
    margin-bottom: 8px

  &__date, &__views
    display: flex
    align-items: center

  &__date
    margin-right: 30px

  &__icon
    flex: 0 0 24px
    width: 24px
    max-width: 24px
    height: 24px
    margin-right: 4px

  &__content
    margin-bottom: 25px
    transition: height 0.3s, ease 0.3s

    &._is-part-text
      height: 710px
      overflow: hidden

    h2
      font-size: 38px
      color: #2E3035
      font-family: $fonts.headings
      font-weight: 400
      line-height: 1.3
      margin-top: 0
      margin-bottom: 25px

      @media (max-width: 767px)
        font-size: 30px
        margin-bottom: 15px

    p
      font-size: 16px
      font-weight: 500
      color: #2E3035
      line-height: 1.2
      margin-top: 0
      margin-bottom: 25px

      @media (max-width: 767px)
        margin-bottom: 15px

      &:last-child
        margin-bottom: 0

    ul
      list-style: none
      padding-left: 0
      margin: 0 0 25px 0

      @media (max-width: 767px)
        margin-bottom: 15px

      li
        position: relative
        padding-left: 25px

        &:before
          content: '\2756'
          position: absolute
          top: 0
          left: 0

  &__button-more
    display: none
    align-items: center
    padding: 10px 20px 10px 16px
    min-width: auto

    &._is-show
      display: flex

    &._is-more
      span
        &:before
          content: attr(data-text-collapse)

      &:after
        transform: rotate(180deg)

    span
      &:before
        content: attr(data-text-more)

    &:after
      content: ''
      flex: 0 0 13px
      width: 13px
      max-width: 13px
      height: 20px
