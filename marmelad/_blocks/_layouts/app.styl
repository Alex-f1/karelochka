html, body
  margin: 0
  padding: 0
  scroll-padding-top: 20px

html
  min-height: 100%
  min-height: 100vh

.app
  display: flex
  flex-direction: column
  height: 100%
  height: 100vh

  &.article-page
    .first-screen
      min-height: 160px

      &__section
        min-height: 160px

      h1
        margin-bottom: 0

  &__wrapper
    display: flex
    flex-direction: column
    min-height: 100%
    min-height: 100vh

  &__content
    display: flex
    flex: 1 0 auto

  &__main
    flex: 1

*
  outline: none !important

.contain
  max-width: 1216px + 20px + 20px
  width: 100%
  padding-right: 20px
  padding-left: 20px
  margin-right: auto
  margin-left: auto

.button-default
  font-size: 16px
  color: #FFF
  font-weight: 500
  line-height: 1.1
  text-decoration: none
  text-align: center
  min-width: 196px
  border: none
  background-color: #FF0B37
  border-radius: 28px
  padding: 20px 25px 19px 25px
  cursor: pointer
  transition: background-color 0.3s

  &:hover
    background-color: #AB0422