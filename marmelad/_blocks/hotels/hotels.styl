.hotels
  padding-top: 64px
  padding-bottom: 84px

  @media (max-width: 1279px)
    padding-top: 30px
    padding-bottom: 40px

  &__head
    margin-bottom: 24px

  &__title
    font-size: 48px
    color: #2E3035
    font-weight: 400
    line-height: 1.2
    margin-top: 0
    margin-bottom: 0

    @media (max-width: 767px)
      font-size: 30px

  &__items
    display: flex
    flex-wrap: wrap
    margin-left: -32px
    margin-bottom: 16px

    @media (max-width: 639px)
      margin-left: -16px

  &__item
    width: 25%
    padding-left: 32px
    margin-bottom: 32px

    @media (max-width: 1023px)
      width: 33.333%

    @media (max-width: 767px)
      width: 50%

    @media (max-width: 639px)
      padding-left: 16px

    @media (max-width: 479px)
      width: 100%
