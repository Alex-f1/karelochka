.tour-thumb
  min-height: 430px
  display: flex
  cursor: default

  &__body
    width: 100%
    min-height: 436px
    display: flex
    flex-direction: column
    padding: 16px 16px 26px 16px
    border-radius: 24px
    position: relative
    transition: background-color 0.3s

    @media (max-width: 1024px)
      background-color: #FFF

    &:after
      content: ''
      position: absolute
      top: 25px
      left: 0
      width: 100%
      height: 100%
      opacity: 0
      background-color: #7A808E
      filter: blur(16px)
      border-radius: 24px
      z-index: -1
      transition: opacity 0.3s, background-color 0.3s, filter 0.3s

      @media (max-width: 1024px)
        opacity: 0.4

    &:hover
      background-color: #FFF

      &:after
        opacity: 0.4

      & ^[0]
        &__img
          &:before
            opacity: 0

        &__more-link
          flex: 0 0 40px
          width: 40px
          max-width: 40px
          height: 40px
          margin-right: 10px
          opacity: 1
          visibility: visible
          transform: translate(0, 0)

          &:after
            opacity: 1

  &__img
    width: 100%
    height: 200px
    overflow: hidden
    border-radius: 8px
    position: relative

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover
      transition: transform 1.5s

    &:before
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: linear-gradient(0deg, rgba(46, 48, 53, 0.2), rgba(46, 48, 53, 0.2))
      transition: opacity 0.3s

    &:hover
      img
        transform: scale(1.3)

  &__content
    padding-top: 35px
    padding: 35px 0 0 8px
    position: relative

  &__date
    color: #fff
    width: 64px
    height: 64px
    background-color: #FF0B37
    border-radius: 50%
    overflow: hidden
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    position: absolute
    left: -8px
    top: -38px
    z-index: 1

    strong
      font-size: 30px
      font-family: $fonts.headings
      font-weight: 400
      line-height: 0.7

    span
      font-size: 12px
      font-family: $fonts.special
      font-weight: 400
      line-height: 1.1
      letter-spacing: 1.76px

  &__share
    font-size: 16px
    color: #FFF
    font-weight: 500
    line-height: 1.1
    position: absolute
    top: -220px
    right: 25px
    padding: 11px 16px
    background-color: #FF0B37
    border-radius: 20px

  &__name
    font-size: 20px
    color: #2E3035
    font-weight: 500
    line-height: 1.1
    text-decoration: none
    margin-bottom: 15px
    display: block
    transition: color 0.3s

    &:hover
      color: #FF0B37

  &__text
    font-size: 14px
    font-weight: 500
    color: #2E3035
    line-height: 1.1
    margin-bottom: 15px

    span
      width: 4px
      height: 4px
      position: relative
      margin-left: 5px
      margin-right: 5px
      display: inline-block
      vertical-align: middle
      background-color: #FF0B37
      border-radius: 50%

  &__desc
    font-size: 14px
    color: #333
    font-weight: 500
    line-height: 1.1
    margin-bottom: 16px
    text-overflow: ellipsis
    display: -webkit-box
    -webkit-line-clamp: 5
    -webkit-box-orient: vertical
    white-space: normal
    height: 76px
    overflow: hidden

  &__upcoming-dates
    margin-bottom: 15px
    background: #EDF0F7
    border-radius: 8px
    overflow: hidden
    padding: 8px 8px 0 8px
    margin-left: -10px
    margin-right: -5px
    cursor: pointer

    &._is-active
      & ^[0]
        &__upcoming-dates-name
          &:after
            transform: rotate(180deg)

  &__upcoming-dates-name
    font-size: 16px
    color: #333
    font-weight: 500
    line-height: 1.1
    position: relative
    margin-bottom: 8px

    &:after
      content: ''
      position: absolute
      top: 8px
      right: 2px
      width: 10px
      height: 7px
      background-image: url("data:image/svg+xml,%3Csvg width='10' height='7' viewBox='0 0 10 7' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M9.0962 0.951904L5.00001 5.0481L0.903809 0.951904' stroke='%234F4F4F' stroke-width='2'/%3E%3C/svg%3E%0A")
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain
      transition: transform 0.3s, ease 0.3s

  &__upcoming-dates-item
    display: flex
    align-items: center
    margin-bottom: 8px

  &__upcoming-date
    font-size: 14px
    color: #333
    font-weight: 500
    line-height: 1
    margin-right: 8px

    &:last-child
      margin-right: 0

  &__upcoming-dates-sep
    flex: 0 0 4px
    width: 4px
    max-width: 4
    height: 14px
    border-radius: 5px
    margin-right: 3px

    &--start
      background-color: #27AE60

    &--middle
      background-color: #F2C94C

    &--final
      background-color: #EB5757

  &__upcoming-dates-other
    display: none

  &__more
    display: flex
    align-items: center
    min-height: 40px

  &__more-link
    flex: 0 0 0%
    width: 0
    max-width: 0
    height: 0
    background: #FF0B37
    border-radius: 50%
    position: relative
    opacity: 0
    visibility: hidden
    transform: translate(-10px, 2px)
    transition: background-color 0.5s, opacity 0.5s, ease 0.5s

    @media (max-width: 1024px)
      flex: 0 0 40px
      width: 40px
      max-width: 40px
      height: 40px
      margin-right: 10px
      opacity: 1
      visibility: visible
      transform: translate(0, 0)

      &:after
        opacity: 1

    &:after
      content: ''
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      width: 20px
      height: 14px
      background-image: url("data:image/svg+xml,%3Csvg width='20' height='14' viewBox='0 0 20 14' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M16.2275 8.00001L12.725 11.5859C12.3391 11.981 12.3466 12.6141 12.7417 13C13.1368 13.3859 13.7699 13.3785 14.1558 12.9834L19.6587 7.34938C19.8485 7.15511 19.8485 6.84491 19.6587 6.65064L14.1558 1.01665C13.7699 0.621554 13.1368 0.614106 12.7417 1.00001C12.3466 1.38591 12.3391 2.01903 12.725 2.41412L16.2275 6.00001H1.60213C1.04984 6.00001 0.602127 6.44772 0.602127 7.00001C0.602127 7.55229 1.04984 8.00001 1.60213 8.00001H16.2275Z' fill='white'/%3E%3C/svg%3E%0A")
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain
      opacity: 0
      transition: opacity 0.5s

    &:hover
      background-color: #AB0422

  &__price
    font-size: 20px
    color: #FF0B37
    font-weight: 500
    line-height: 1.1

  &__count-comments
    font-size: 14px
    color: #2E3035
    font-weight: 500
    line-height: 1.1
    display: flex
    align-items: center
    background-color: #EDF0F7
    border-radius: 16px
    padding: 10px 12px
    margin-left: auto

    &:before
      content: ''
      flex: 0 0 14px
      width: 14px
      max-width: 14px
      height: 15px
      background-image: url("data:image/svg+xml,%3Csvg width='14' height='15' viewBox='0 0 14 15' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M12 0H2C0.895431 0 0 0.895431 0 2V9C0 10.1046 0.895431 11 2 11H3V15L6.41421 11.5858C6.78929 11.2107 7.29799 11 7.82843 11H12C13.1046 11 14 10.1046 14 9V2C14 0.895431 13.1046 0 12 0Z' fill='%232E3035'/%3E%3C/svg%3E%0A")
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain
      margin-right: 4px