.callback-form
  padding-top: 45px
  padding-bottom: 130px
  background-color: #EDF0F7

  @media (max-width: 1279px)
    padding-top: 30px
    padding-bottom: 50px

  &__inner
    max-width: 880px
    width: 100%
    padding-right: 20px
    padding-left: 20px
    margin-right: auto
    margin-left: auto

  &__head
    text-align: center
    display: flex
    flex-direction: column
    margin-bottom: 30px

    @media (max-width: 767px)
      margin-bottom: 30px

  &__icon
    max-width: 160px
    margin-right: auto
    margin-left: auto
    margin-bottom: 20px

    @media (max-width: 767px)
      margin-bottom: 10px

  &__title
    font-size: 38px
    color: #2E3035
    font-family: $fonts.headings
    font-weight: 400
    line-height: 1.3
    margin-top: 0
    margin-bottom: 30px

    @media (max-width: 767px)
      font-size: 30px
      margin-bottom: 15px

  &__desc
    font-size: 20px
    font-weight: 500
    color: #2E3035
    line-height: 1.2

    @media (max-width: 639px)
      font-size: 16px

  &__fields
    max-width: 540px
    width: 100%
    margin-right: auto
    margin-left: auto

  &__field
    display: flex
    align-items: center
    background-color: #FFF
    border-radius: 28px
    overflow: hidden

    @media (max-width: 639px)
      background-color: transparent
      flex-direction: column
      border-radius: 0

    input
      font-size: 16px
      color: #2e3035
      font-weight: 500
      line-height: 1
      width: 100%
      height: 56px
      border: none
      padding-right: 32px
      padding-left: 32px
      background-color: #FFFFFF
      border-radius: 28px

      @media (max-width: 639px)
        padding-right: 15px
        padding-left: 15px

    ::placeholder
      font-size: 16px
      color: #7A808E
      font-weight: 500
      line-height: 1

  &__button-call
    display: flex
    align-items: center

    @media (max-width: 639px)
      width: 100%
      margin-top: 15px
      justify-content: center

